<%= #noinspection RubyResolve
    simple_form_for [quote, bundle],
                    html: { class: "form bundle" } do |f| %>

  <%= maybe_form_errors_for(bundle) %>

  <%= f.input :ship_on, input_html: { autofocus: true } %>

  <%= link_to "Cancel", quote_path(quote), class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>