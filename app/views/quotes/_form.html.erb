<%= simple_form_for quote, html: { class: "quote form",
                                   autocomplete: 'off' } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>

  <%= link_to "Cancel", quotes_path,
              data: { **@maybe_top },
              class: "btn btn--light" %>

  <%= f.submit class: "btn btn--secondary", data: { **@maybe_top } %>
<% end %>