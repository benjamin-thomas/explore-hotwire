<%= simple_form_for quote, html: { class: "quote form",
                                   autocomplete: 'off' } do |f| %>

  <%= maybe_form_errors_for(quote) %>

  <%= f.input :name, input_html: { autofocus: true } %>

  <%= link_to "Cancel", quotes_path,
              data: { **@maybe_top },
              class: "btn btn--light" %>

  <%= f.submit class: "btn btn--secondary", data: { **@maybe_top } %>
<% end %>